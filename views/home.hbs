<div class="container" style="max-width: 400px; margin: 10px auto;">

  <form action="/timkiem" method="get" class="search-form">
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="tìm kiếm sản phẩm theo " name="tensp" style="width: 100px;">
      <button type="submit" class="btn btn-primary">tìm kiếm</button>
    </div>
  </form>
  <form action="/sapxep" method="get" class="search-form">
    <div class="input-group mb-3">
      <button type="submit" class="btn btn-primary">sắp xếp</button>
    </div>
  </form>
</div>
<a href="/add" style="text-align: center;">
    <h1>thêm mới sản phẩm</h1>
</a>
<table class="table align-middle mb-0 bg-white container" style="max-width: 800px;">
    <thead class="bg-light">
        <tr>
            <th>Mã sản phẩm</th>
            <th>tên sản phẩm</th>
            <th>ảnh sản phẩm</th>
            <th>loại sản phẩm</th>
            <th>giá</th>
            <th>manage</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>
                <p class="fw-normal mb-1">{{this.masp}}</p>
            </td>
            <td>
                <p class="fw-normal mb-1">{{this.tensp}}</p>
            </td>
            <td>
                <div class="d-flex align-items-center">
          {{#if this.anhsp}}
          <img src="{{this.anhsp}}" alt="Avatar" style="width: 80px; height: 80px" class="rounded-circle" />
          {{else}}
          <img src="../{{this.fileanhsp}}" alt="Avatar" style="width: 80px; height: 80px" class="rounded-circle" />
          {{/if}}
        </div>
            </td>   


            <td>
                <p>{{this.loaisp}}</p>
            </td>
            <td>
                <p>{{this.gia}}</p>
            </td>
            <td>
                <a href="/edit/{{this._id}}" class="btn btn-link btn-sm btn-rounded">Edit</a>
                <a href="/delete/{{this._id}}" class="btn btn-link btn-sm btn-rounded"
                    onclick=" return confirm('bạn có muốn xóa thật không')">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>